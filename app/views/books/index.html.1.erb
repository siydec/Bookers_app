<h1>Books</h1>
<div class = "table">
<th>Title</th> <th>Body</th>
<% @books.each do |book| %>
<div class = "main" >
 <th>Title</th>
 <span><%= book.title %></span>
 <span><%= book.body %></span>
 <spam><%= link_to "Show", book_path(book.id) %></spam>
 <span><%= link_to "Edit", edit_book_path(book.id) %></span>
 <span><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %></span>
 </div>
 <% end %>
</div>




<h2>New book</h2>
<%= form_with model: @book, url: '/books/index',method: :post, local: true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <br>
 <%= f.submit 'CreateBook' %>
<% end %>

